@page "/teacher"
@attribute [StreamRendering]

<PageTitle>Teacher</PageTitle>

<h1>Teacher</h1>

<p>Send out a notification to all students.</p>

<input type="text" name="Notification" />

@if (students == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Hours</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in students)
            {
                <tr>
                    <td>@student</td>
                    <td>@student</td>
                    <td>@student</td>
                    <td>@student</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private Students[]? students;

    protected override async Task OnInitializedAsync()
    {
        await Task.Delay(500);

        students = Enumerable.Range(1, 5).Select(index => new Students
        {
        }).ToArray();
    }

    private class Students
    {
        public string? FirstName { get; set; }
        public string? LastName { get; set; }
        public string? Email { get; set; }
        public int? Hours { get; set; }
    }
}
