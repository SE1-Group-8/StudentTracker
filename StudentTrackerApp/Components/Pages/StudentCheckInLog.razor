@page "/student-checkin/{studentId:int}"
@using Models
@using Services
@using Repositories
@inject DbCheckInRepository CheckInRepo
@inject IUserRepository UserRepo
@inject UserSession Session
@inject NavigationManager NavMan

<PageTitle>Student Check-In Logs</PageTitle>

@if (student == null)
{
    <p class="text-danger">Student not found.</p>
}
else
{
    <h2>@student.FirstName @student.LastName Check-In History</h2>

    @if (logs.Count == 0)
    {
        <p>No check-in history available.</p>
    }
    else
    {
        <h4>Total Hours: @TotalHours.ToString("0.00")</h4>

        <table class="table table-striped mt-3 shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Check In Time</th>
                    <th>Check Out Time</th>
                    <th>Latitude (In)</th>
                    <th>Longitude (In)</th>
                    <th>Latitude (Out)</th>
                    <th>Longitude (Out)</th>
                    <th>Within 500 Feet</th>
                    <th>Hours</th>
                    <th>Notes</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in logs)
                {
                    var rowHours = GetHours(log);
                    string collapseId = $"notes-{log.Id}";

                    <tr>
                        <td>@log.CheckInTime</td>
                        <td>@log.CheckOutTime</td>
                        <td>@log.CheckInLatitude</td>
                        <td>@log.CheckInLongitude</td>
                        <td>@log.CheckOutLatitude</td>
                        <td>@log.CheckOutLongitude</td>
                        <td>@(log.WithinRange ? "Yes" : "No")</td>
                        <td>@rowHours.ToString("0.00")</td>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(log.Notes))
                            {
                                <button class="btn btn-sm btn-primary"
                                        type="button"
                                        data-bs-toggle="collapse"
                                        data-bs-target="#@collapseId">
                                    View
                                </button>
                            }
                            else
                            {
                                <span class="text-muted">No Notes</span>
                            }
                        </td>
                    </tr>

                    @if (!string.IsNullOrWhiteSpace(log.Notes))
                    {
                        <tr class="collapse" id="@collapseId">
                            <td colspan="9">
                                <div class="p-3 border rounded bg-light">
                                    <strong>Notes:</strong>
                                    <p class="mt-2">@log.Notes</p>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    }
}

@code {
    [Parameter] public int studentId { get; set; }

    private User? student;
    private List<CheckInLog> logs = new();
    private double TotalHours => logs.Sum(log => GetHours(log));

    protected override async Task OnInitializedAsync()
    {
        if (Session.UserType == "Student")
        {
            NavMan.NavigateTo("/");
            return;
        }

        student = await UserRepo.ReadUserAsync(studentId);
        logs = await CheckInRepo.GetLogsByUserIdAsync(studentId);
    }

    private double GetHours(CheckInLog log)
    {
        if (log.CheckOutTime == null)
            return 0;

        return (log.CheckOutTime.Value - log.CheckInTime).TotalHours;
    }
}
